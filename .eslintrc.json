{
    "extends": [
        "airbnb",
        "prettier",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "babel",
        "import",
        "jsx-a11y",
        "react",
        "prettier"
    ],
    "rules": {
        "react/state-in-constructor": "never",
        "prettier/prettier": [
            "error"
        ],
        "indent": "error",
        "react/prop-types": 0,
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "overrides": [
        {
            "files": [
                "files/transformed/by/babel/*.js"
            ]
        }
    ]
}